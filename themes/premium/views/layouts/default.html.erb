<%= javascript_include_tag "/javascripts/theme/bootstrap.min.js" %>
<%= javascript_include_tag "/javascripts/theme/jquery.themepunch.plugins.min.js" %>
<%= javascript_include_tag "/javascripts/theme/jquery.themepunch.revolution.min.js" %>
<%= javascript_include_tag "/javascripts/theme/waypoints.min.js" %>
